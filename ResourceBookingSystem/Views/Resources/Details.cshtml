@model ResourceBookingSystem.Models.Resource

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<div>
    <h4>Resource Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <!-- Other fields here -->
    </dl>
    
    <h4>Upcoming Bookings</h4>
    @if (Model.Bookings?.Any() == true)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Booked By</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Purpose</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings.Where(b => b.StartTime > DateTime.Now).OrderBy(b => b.StartTime))
                {
                    <tr>
                        <td>@booking.BookedBy</td>
                        <td>@booking.StartTime.ToString("g")</td>
                        <td>@booking.EndTime.ToString("g")</td>
                        <td>@booking.Purpose</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No upcoming bookings for this resource.</p>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a> |
    <a asp-controller="Bookings" asp-action="Create" asp-route-resourceId="@Model.Id">Book This Resource</a>
</div>